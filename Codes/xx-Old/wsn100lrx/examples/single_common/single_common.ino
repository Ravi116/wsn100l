// include the library code:
#include <LiquidCrystal.h>
#include<SoftwareSerial.h>
#include "wsn100lrx.h"
//****************************************************************** GLOBAL DEFINITION *****************************************************
// initialize the library with the numbers of the interface pins
LiquidCrystal lcd(9, 8, A0, A1, A2, A3);
//software serial definition
SoftwareSerial ss(6,7);
wsn100lrx wsn;
int temp=0;

//**************************************************************** SETUP *******************************************************************
void setup() {
  ///////////////////// LCD setup ////////////////////////
   lcd.begin(20, 4);
   lcd.setCursor(0, 0);
   ///////////////////// software serial ///////////////
   ss.begin(9600);
   wsn.wsnRxSetup();
   lcd.clear();
   

}
//******************************************************************************EXTRA FUNCTIONS ***********************************************************

//****************************************************************************** MAIN LOOP *****************************************************************
void loop() {
  if(Serial.available()>0)
  {
    if(temp==0)lcd.clear();
    String str=Serial.readStringUntil('*');
    lcd.setCursor(0,temp++);
    lcd.print(str);
    if(temp==4)temp=0;
  }

}

